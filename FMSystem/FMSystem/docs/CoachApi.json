//用于通过教练的ID来得到指定的教练信息
GetCoachesById
//
input:
{
        /*输入：教练ID*/
        "CoachId": 1,
}
output:
{
        /*输出教练的基本信息*/
        "Code": 200,
        "Message": "成功",
        "Data":
        {
                "CoachId"       : 1,
                "Name"          : "教练",
                "PhoneNo"       : "000-0000-0000",
                "Email"         : "123456@qq.com",
                "State"         : "InOffice"
        },
          
        "Code":999,
        "Message": "失败",
        "Data": null
               
}



