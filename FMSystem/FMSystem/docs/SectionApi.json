  {
        "SectionId": 1, // SectionId > 0,
  }
  output:
  {
         "Code": 200,
         "Message": "成功",
         "Data":
         {
              "SectionId": 1,
              "CourseId" : 1,
              "CoachId"  : 1,
              "Slot"     : { "Start": 1592700600, "End": 1592712900 }
          },
          
          "Code":999,
          "Message": "失败",
          "Data": null
               
   }

