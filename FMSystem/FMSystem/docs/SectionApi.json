                     {
                     "SectionId"      : 1,
                     "Title"          : "肌肉塑形",
                     "ClassHour"      : 15,
                     "AttendedHours"  : 8
                     },
                     {
                     "SectionId"      : 2,
                     "Title"          : "快速减脂",
                     "ClassHour"      : 12,
                     "AttendedHours"  : 7
                     }
              ]
       },
        
        "Code": 999,
        "Message": "失败",
        "Data":null

}


