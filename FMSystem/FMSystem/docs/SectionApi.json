//通过教练ID获得指定的教练的教课信息
GetSectionByCoachId
  input:
  {
         /*输入：教练ID*/
         "CoachId": 1 
  }
  output:
  {
         "Code": 200,
         "Message": "成功",
         "Data": {
              /*对于该教练教的所有Section，输出它们的SectionID和关联的Course.Title, Course.ClassHour
              以及该Section已经完成的时长AttendedHours*/
